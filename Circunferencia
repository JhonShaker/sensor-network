public class Circunferencia {
    private double radio;
    private double x0;
    private double y0;
    
    public Circunferencia(double radio, double x, double y){
        this.radio = radio;
        this.x0 = x;
        this.y0 = y;
    }
    
    public double getX0(){
        return this.x0;
    }
    
    public void setX0(double x){
        this.x0 = x;
    }
    
    public double getY0(){
        return this.y0;
    }
    
    public void setY0(double y){
        this.y0 = y;
    }
    
    public double getradio(){
        return this.radio;
    }
    
    public void setradio(double radio){
        this.radio = radio;
    }
    
}